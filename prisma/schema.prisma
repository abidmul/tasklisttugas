generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement())
  name      String
  detail    String?
  dueDate   DateTime
  status    Status   @default(NOT_STARTED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  IN_REVIEW
  COMPLETED
}
