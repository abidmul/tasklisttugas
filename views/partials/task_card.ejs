<div class="task-progress-card">
    <div class="task-progress-card-left">
      <% if (task.status=='COMPLETED' ) { %>
        <div class="material-icons task-progress-card-top-checked">check_circle</div>
        <% } else { %>
          <!-- Modifikasi icon checklist selain COMPLETED -->
          <form action="/task/move/<%= task.id %>?_method=PATCH&status=COMPLETED" method="POST"
            id="set-complete-<%= task.id %>">
            <div class="material-icons task-progress-card-top-check"
              onclick="document.getElementById('set-complete-<%= task.id %>').submit()">check_circle</div>
          </form>
          <!-- Modifikasi icon checklist selain COMPLETED -->
          <% } %>
          <a href="/task/<%= task.id %>/edit" class="material-icons task-progress-card-top-edit">more_vert</a>
    </div>
    <p class="task-progress-card-title">
      <%= task.name %>
    </p>
    <div>
      <p>
        <%= task.detail %>
      </p>
    </div>
    <div>
      <p>Due on: <%= new Date(task.dueDate).toLocaleDateString('id-ID', { weekday: 'long' , year: 'numeric' ,
          month: 'long' , day: 'numeric' }) %>
      </p>
    </div>
    <div class="<% if (leftStatus) { %>task-progress-card-left<% } else { %>task-progress-card-right<% } %>">
      <% if (leftStatus) { %>
        <form action="/task/move/<%= task.id %>?_method=PATCH&status=<%= leftStatus %>" method="POST"> 
          <button class="material-icons">chevron_left</button>
        </form>
        <% } %>
  
          <% if (rightStatus) { %>
            <form action="/task/move/<%= task.id %>?_method=PATCH&status=<%= rightStatus %>" method="POST">  
              <button class="material-icons">chevron_right</button>
            </form>
            <% } %>
    </div>
  </div>